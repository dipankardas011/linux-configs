##### Battery Warning #####
exec --no-startup-id while true; do \
    battery_level=$(cat /sys/class/power_supply/BAT0/capacity); \
    battery_status=$(cat /sys/class/power_supply/BAT0/status); \
    if [ $battery_level -le 20 ] && [ "$battery_status" = "Discharging" ]; then \
        notify-send -u critical \
            -i battery-caution \
            "Low Battery Warning" \
            "Battery level is ${battery_level}%\nPlease connect charger" \
            -h string:x-dunst-stack-tag:battery; \
    elif [ $battery_level -le 10 ] && [ "$battery_status" = "Discharging" ]; then \
        notify-send -u critical \
            -i battery-empty \
            "Critical Battery Level" \
            "Battery level is ${battery_level}%!\nSystem will hibernate soon" \
            -h string:x-dunst-stack-tag:battery; \
    fi; \
    sleep 60; \
done &


#### Volume #####
# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status

bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status && \
    notify-send -t 1000 -h string:x-dunst-stack-tag:volume "Volume 🔊" \
    "$(pactl get-sink-mute @DEFAULT_SINK@ | awk '{print ($2 == "yes" ? "Muted" : "Unmuted")}')"


bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status && \
    notify-send -t 1000 -h string:x-dunst-stack-tag:microphone "Microphone 🎤" \
    "$(pactl get-source-mute @DEFAULT_SOURCE@ | awk '{print ($2 == "yes" ? "Muted" : "Unmuted")}')"

bindsym XF86AudioRaiseVolume exec --no-startup-id $HOME/.config/i3/scripts/volume.sh "UP"

bindsym XF86AudioLowerVolume exec --no-startup-id $HOME/.config/i3/scripts/volume.sh "DOWN"


##### Brightness #####
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 5 && \
    notify-send -t 1000 -h string:x-dunst-stack-tag:brightness "Brightness 🌞" \
    "Current: $(printf "%.0f" $(light -G))%" -h int:value:$(printf "%.0f" $(light -G))

bindsym XF86MonBrightnessDown exec --no-startup-id light -U 5 && \
    notify-send -t 1000 -h string:x-dunst-stack-tag:brightness "Brightness 🌤️" \
    "Current: $(printf "%.0f" $(light -G))%" -h int:value:$(printf "%.0f" $(light -G))


